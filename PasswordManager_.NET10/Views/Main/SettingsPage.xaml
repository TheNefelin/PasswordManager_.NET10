<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PasswordManager_.NET10.Views.Main.SettingsPage"
             x:Name="thisPage"
             Title="Settings">

    <!-- Grid principal con overlay de loading -->
    <Grid RowDefinitions="*">

        <!-- Contenido principal (ScrollView) -->
        <ScrollView Grid.Row="0" Padding="20">
            <VerticalStackLayout Spacing="20">

                <VerticalStackLayout Spacing="10">
                    <Label Text="GENERAL" FontAttributes="Bold" FontSize="16"/>
                    <Button Text="â“ Manual de Usuario" 
                        Command="{Binding GoToHelpCommand}"/>
                </VerticalStackLayout>

                <!-- BIOMETRÃA -->
                <VerticalStackLayout>
                    <Label 
                        Text="BIOMETRÃA" 
                        FontAttributes="Bold" 
                        FontSize="16"/>

                    <!-- Mensaje de error si no estÃ¡ disponible -->
                    <Label 
                        Text="Este dispositivo no cuenta con biometrÃ­a"
                        FontSize="12"
                        TextColor="Red"
                        IsVisible="{Binding IsBiometricAvailable, Converter={StaticResource InvertedBoolConverter}}"/>

                    <Grid ColumnDefinitions="*,Auto" Margin="0">
                        <Label 
                            Grid.Column="0"
                            Text="Activar huella dactilar"
                            FontSize="14"
                            VerticalOptions="Center"/>

                        <Switch Grid.Column="1"                            
                            IsEnabled="{Binding IsBiometricAvailable}"
                            IsToggled="{Binding IsBiometricEnabled}">
                            <Switch.Behaviors>
                                <toolkit:EventToCommandBehavior
                                    EventName="Toggled"
                                    Command="{Binding Source={x:Reference thisPage}, Path=BindingContext.ToggleBiometricCommand}" />
                            </Switch.Behaviors>
                        </Switch>
                    </Grid>

                    <Label 
                         Text="Esta opciÃ³n no es recomendable, permite el inicio de sesiÃ³n automÃ¡tico mediante datos biomÃ©tricos."
                         FontSize="12"
                         TextColor="Red"/>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label 
                             Grid.Column="0"
                             Text="Guardar contraseÃ±a"
                             FontSize="14"
                             VerticalOptions="Center"/>

                        <Switch Grid.Column="1"
                           IsEnabled="{Binding IsBiometricEnabled}"
                           IsToggled="False">
                            <Switch.Behaviors>
                                <toolkit:EventToCommandBehavior
                                   EventName="Toggled"
                                   Command="{Binding Source={x:Reference thisPage}, Path=BindingContext.ToggleBiometricCommand}" />
                            </Switch.Behaviors>
                        </Switch>
                    </Grid>
                </VerticalStackLayout>

                <!-- INFORMACIÃ“N DE SESIÃ“N -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="INFORMACIÃ“N DE SESIÃ“N" 
                           FontAttributes="Bold" 
                           FontSize="16"/>

                    <!-- Session Time Remaining -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Tiempo de sesiÃ³n:" FontSize="12" Opacity="0.7"/>
                        <Label Text="{Binding SessionTimeRemaining}"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <!-- User ID -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ID Usuario:" FontSize="12" Opacity="0.7"/>
                        <Entry Grid.Column="0"
                            Text="{Binding UserId}"
                            IsReadOnly="True"
                            FontSize="12"/>
                    </VerticalStackLayout>

                    <!-- Role -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Rol:" FontSize="12" Opacity="0.7"/>
                        <Entry Text="{Binding Role}"
                               IsReadOnly="True"
                               FontSize="12"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- TEMA -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="TEMA" 
                           FontAttributes="Bold" 
                           FontSize="16"/>

                    <Grid ColumnDefinitions="*,*,*" 
                          ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="ðŸ”„ Auto"
                                Command="{Binding ChangeThemeCommand}"
                                CommandParameter="Auto"/>
                        <Button Grid.Column="1"
                                Text="â˜€ï¸ Light"
                                Command="{Binding ChangeThemeCommand}"
                                CommandParameter="Light"/>
                        <Button Grid.Column="2"
                                Text="ðŸŒ™ Dark"
                                Command="{Binding ChangeThemeCommand}"
                                CommandParameter="Dark"/>
                    </Grid>

                    <Label Text="{Binding SelectedTheme, StringFormat='Tema actual: {0}'}"
                           FontSize="12"
                           Opacity="0.7"
                           HorizontalOptions="Center"/>

                </VerticalStackLayout>

                <!-- TOKENS -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="TOKENS" 
                           FontAttributes="Bold" 
                           FontSize="16"/>

                    <!-- API Token -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="API Token:" FontSize="12" Opacity="0.7"/>
                        <Editor Grid.Column="0"
                            Text="{Binding ApiToken}"
                            IsReadOnly="True"
                            FontSize="10"
                            FontFamily="Courier"/>
                    </VerticalStackLayout>

                    <!-- SQL Token -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="SQL Token:" FontSize="12" Opacity="0.7"/>
                        <Entry
                            Text="{Binding SqlToken}"
                            IsReadOnly="True"
                            FontSize="10"
                            FontFamily="Courier"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>

                <!-- INFORMACIÃ“N DE APP -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="INFORMACIÃ“N" 
                           FontAttributes="Bold" 
                           FontSize="16"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="VersiÃ³n:" FontSize="12" Opacity="0.7"/>
                        <Label Text="{Binding AppVersion}" FontSize="12"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Overlay (encima del contenido) -->
        <VerticalStackLayout Grid.Row="0"
                            IsVisible="{Binding IsLoading}"
                            Spacing="20"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            BackgroundColor="#80000000"
                            Padding="20">
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Scale="1.5"/>
            <Label Text="Cargando informaciÃ³n..." 
                   HorizontalOptions="Center"
                   FontSize="14"/>
        </VerticalStackLayout>

    </Grid>

</ContentPage>