<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager_.NET10.Views.Main.PasswordPromptPage"
             Title="PasswordPromptPage">

    <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Center">

        <Label Text="Ingrese su contraseña para desencriptar:"
               FontSize="16"
               FontAttributes="Bold"/>

        <Entry x:Name="PasswordEntry"
               Placeholder="••••••••"
               IsPassword="True"
               FontSize="14"/>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.Column="0"
                    Text="Aceptar"
                    Clicked="OnAcceptClicked"/>
            <Button Grid.Column="1"
                    Text="Cancelar"
                    Clicked="OnCancelClicked"/>
        </Grid>

    </VerticalStackLayout>
    
</ContentPage>