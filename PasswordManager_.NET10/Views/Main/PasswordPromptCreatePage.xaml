<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager_.NET10.Views.Main.PasswordPromptCreatePage"
             Title="PasswordPromptCreatePage">

    <Grid RowDefinitions="*,*" Padding="20">
        <VerticalStackLayout 
           Grid.Row="0"
           Spacing="20" 
           Padding="20" 
           VerticalOptions="Center">

            <Label 
                Text="Crear contraseña para desencriptar:"
                HorizontalOptions="Center"
                FontSize="16"
                FontAttributes="Bold"/>

            <Entry 
                Text="{Binding NewPassword}"
                Placeholder="••••••••"
                IsPassword="True"
                FontSize="14"/>

            <Entry
                Text="{Binding ConfirmPassword}"
                Placeholder="••••••••"
                IsPassword="True"
                FontSize="14"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button 
                    Grid.Column="0"
                    Text="Aceptar"
                    Command="{Binding AcceptClickedCommand}"/>
                <Button 
                    Grid.Column="1"
                    Text="Cancelar"
                    Command="{Binding CancelClickedCommand}"/>
            </Grid>

            <!-- Error/Message -->
            <Label 
                Text="{Binding Message}" 
                HorizontalOptions="Center"
                TextColor="Red"
                IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyToBoolConverter}}"/>
            
            <!-- Loading Indicator -->
            <ActivityIndicator
                Grid.Row="1"
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <VerticalStackLayout
           VerticalOptions="Center"
           Grid.Row="1">

            <Image Source="icon_skyrim_512.png" WidthRequest="200"/>
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>