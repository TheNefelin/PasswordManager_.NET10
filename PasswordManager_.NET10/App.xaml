<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PasswordManager_.NET10"
             xmlns:converters="clr-namespace:PasswordManager_.NET10.Converters"
             x:Class="PasswordManager_.NET10.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:ExpandedToArrowConverter x:Key="ExpandedToArrowConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:StringNotEmptyToBoolConverter x:Key="StringNotEmptyToBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
